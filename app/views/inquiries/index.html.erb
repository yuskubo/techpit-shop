<main role="main">
  <div class="container">
    <h4>問い合せ一覧</h4>
    <table class="table table-bordered table-hover users">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">名前</th>
          <th scope="col">メールアドレス</th>
        </tr>
      </thead>
      <tbody>
        <% @inquiries.each.with_index(1) do |inquiry, i| %>
          <tr>
            <th scope="row"><%= i %></th>
            <td><%= inquiry.name %></td>
            <td><%= inquiry.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</main>
