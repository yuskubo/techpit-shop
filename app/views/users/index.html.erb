<main role="main">
  <div class="container">
    <h4>登録者一覧</h4>
    <%= form_with(url: users_path, scope: :email_send, local:  true) do |f| %>
    <table class="table table-bordered table-hover users">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">名前</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">メール配信</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each.with_index(1) do |user, i| %>
          <tr>
            <th scope="row"><%= i %></th>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= f.check_box :register, { multiple: true }, user.email, nil %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="text-center">
    <%= f.submit "一括送信", class: "btn btn-primary" %>
  </div>
  <% end %>
</main>
